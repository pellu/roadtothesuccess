<form id="loginForm" action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
    <h3>Modification du mot de passe</h3>
    <fieldset>
        <style>
            input#remember_me{
                margin-top: -18px;
                margin-left: 50px;
            }
        </style>
        <fieldset>
            {{ form_widget(form) }}
            <label></label>
            <input id="login" type="submit" value="{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}" />
        </fieldset>
    </fieldset>
</form>
<div class="clear"></div>